<%= form_with(model: comment, url: [post, comment], local: true) do |f| %>
    <% if comment.id.present? %>
        <%= f.text_field :content %>
        <%= f.submit :댓글수정 %>
    <% else %>
        <%= f.label :댓글쓰기 %>
        <%= f.text_field :content %>
        <%= f.submit :댓글입력 %>
    <% end %>
<% end %>